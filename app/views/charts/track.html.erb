<h1>Track Chart</h1>

<table class="chart">
  <thead>
    <tr>
      <th>Position</th>
      <th>Track</th>
      <th>Artist</th>
      <th>Plays</th>
    </tr>
  </thead>
  <tbody>
  <% @track_chart.each_with_index do |track, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= link_to track.name, [track.artist, track] %></td>
      <td><%= link_to track.artist.name, track.artist %></td>
      <td><%= number_with_delimiter(track.plays) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
