<!DOCTYPE html>
<html>
<head>
  <title>ScrobbleBrowser</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<div class="breadcrumb">
  <a href="/">Home</a>

  <% if @user %>
    / <%= link_to_user(@user)%>
  <% end %>

  <% if @artist %>
    / <%= link_to_artist(@artist) %>
    <% if @track %>
      / <%= link_to_track(@track) %>
    <% end %>
  <% end %>
</div>

<%= yield %>

</body>
</html>
