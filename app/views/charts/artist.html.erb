<h1>Artist Chart</h1>

<table class="chart">
  <thead>
    <tr>
      <th>Position</th>
      <th>Artist</th>
      <th>Plays</th>
    </tr>
  </thead>
  <tbody>
  <% @artist_chart.each_with_index do |artist, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= link_to artist.name, artist %></td>
      <td><%= number_with_delimiter(artist.plays) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
